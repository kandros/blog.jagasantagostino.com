---
import Layout from "@/components/Layout.astro";
import NotionQuote from "@/components/NotionQuote.astro";
---



<Layout>
	<div class="grid place-items-center pt-[30%] font-thin text-xl">
		<h1>Jaga Santagostino's digital garden ðŸŒ±</h1>
	</div>
	
	<!-- <a href="/articles" class="text-blue-700 underline visited:text-purple-900">Articles</a> -->


		<div class="text-center">
			<h2 class="text-xs font-light m-2">
				A random quote form my collection
			</h2>
			 <div class="grid place-items-center">
				<NotionQuote server:defer>
					<div class="hidden" id="quote-fallback" slot="fallback">loading...</div>
				</NotionQuote>
			 </div>
		</div>

		<script>
			setTimeout(() => {
				// show fallback only if quote is not loaded withing 500ms
				const quoteFallback = document.getElementById("quote-fallback");
				if (quoteFallback) {
					quoteFallback.classList.remove("hidden");
				}
			}, 500)
			
		</script>
</Layout>

